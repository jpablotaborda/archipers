<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/fucsia"
        android:orientation="vertical"
        tools:context="com.example.jpablotaborda.ejercicioslayout.sorpresa">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/corazonfontrans"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="45dp"
            android:layout_weight="1"
            android:text="Te amo "
            android:textColor="@color/blanco"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:textSize="25dp"
            android:layout_weight="1"
            android:text="Gracias por estar todo este tiempo a mi lado Yessy."
            android:textColor="@color/blanco"
            android:gravity="center"/>
    </LinearLayout>


